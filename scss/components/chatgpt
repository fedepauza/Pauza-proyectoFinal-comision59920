/* Diseño general */
body {
    font-family: sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f9f9f9;
    color: #333;
}

.container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
}

h1 {
    text-align: center;
    color: #333;
    margin-bottom: 10px;
}

p {
    text-align: center;
    color: #666;
}

/* Estilos del formulario */
.contact-form {
    background-color: #fff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    margin-bottom: 20px;
}

.form-group {
    margin-bottom: 15px;
}

input[type="text"],
input[type="email"],
textarea {
    width: 100%;
    padding: 10px;
    margin-top: 5px;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 16px;
    background-color: #f0f0f0;
}

input[type="text"]:focus,
input[type="email"]:focus,
textarea:focus {
    outline: none;
    border-color: #007bff;
    background-color: #fff;
}

textarea {
    height: 150px;
    resize: none;
}

.btn-submit {
    background-color: #007bff;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    width: 100%;
}

.btn-submit:hover {
    background-color: #0056b3;
}

/* Información de contacto */
.contact-info {
    text-align: center;
    font-size: 16px;
}

.contact-info p {
    margin: 5px 0;
    color: #333;
}

.contact-info strong {
    color: #007bff;
}

/* Diseño Responsive */
@media (max-width: 600px) {
    .contact-form, .contact-info {
        padding: 15px;
    }

    input[type="text"],
    input[type="email"],
    textarea {
        font-size: 14px;
    }

    .btn-submit {
        font-size: 14px;
    }
}


